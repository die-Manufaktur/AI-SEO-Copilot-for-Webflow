# Environment Variables for AI SEO Copilot - Webflow Hybrid App
# Copy this file to .env and fill in your actual values

# Webflow OAuth Configuration
WEBFLOW_CLIENT_ID=your_webflow_client_id_here
WEBFLOW_CLIENT_SECRET=your_webflow_client_secret_here
OAUTH_REDIRECT_URI=https://localhost:1337/oauth/callback

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
USE_GPT_RECOMMENDATIONS=true

# Worker Configuration
VITE_WORKER_URL=http://localhost:8787
VITE_FORCE_LOCAL_DEV=true
CLOUDFLARE_ENV=development

# Production URLs (for deployment)
PRODUCTION_WORKER_URL=https://seo-copilot-api-production.paul-130.workers.dev
PRODUCTION_REDIRECT_URI=https://your-webflow-extension-domain.com/oauth/callback

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=https://webflow.com,https://*.webflow-ext.com,https://*.webflow.io,http://localhost:5173

# Analytics Configuration (optional)
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=your_analytics_api_key_here

# Feature Flags
ENABLE_BATCH_OPERATIONS=true
ENABLE_ROLLBACK_FUNCTIONALITY=true
ENABLE_CONTENT_INTELLIGENCE=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_CAPACITY=20

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# Worker Secrets (set via wrangler secret put)
# WEBFLOW_CLIENT_SECRET - Set via: wrangler secret put WEBFLOW_CLIENT_SECRET
# OPENAI_API_KEY - Set via: wrangler secret put OPENAI_API_KEY