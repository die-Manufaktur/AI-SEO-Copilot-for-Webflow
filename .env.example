# Environment Variables for AI SEO Copilot - Webflow Extension
# Copy this file to .env to get started
#
# ZERO-SECRETS MODE: This app works fully WITHOUT any API keys!
# All AI recommendations use rule-based fallbacks when no OpenAI key is set.

# ============================================================================
# DEVELOPMENT SETTINGS (required for local development)
# ============================================================================

# Worker Configuration - These are pre-configured for local development
VITE_WORKER_URL=http://localhost:8787
VITE_FORCE_LOCAL_DEV=true
CLOUDFLARE_ENV=development
NODE_ENV=development

# ============================================================================
# OPTIONAL: AI FEATURES (not required - app works without these)
# ============================================================================

# OpenAI Configuration (OPTIONAL)
# If not set, the app uses intelligent rule-based recommendations instead
# OPENAI_API_KEY=sk-your-key-here
USE_GPT_RECOMMENDATIONS=true

# ============================================================================
# OPTIONAL: WEBFLOW DATA API ACCESS (not required for basic functionality)
# ============================================================================

# Webflow OAuth Configuration (OPTIONAL)
# Only needed if you want extended Webflow Data API access
# WEBFLOW_CLIENT_ID=your_webflow_client_id_here
# WEBFLOW_CLIENT_SECRET=your_webflow_client_secret_here
# OAUTH_REDIRECT_URI=http://localhost:1337/oauth/callback

# ============================================================================
# PRODUCTION URLS (only for deployment - not needed for local dev)
# ============================================================================

# PRODUCTION_WORKER_URL=https://your-worker.workers.dev
# PRODUCTION_REDIRECT_URI=https://your-domain.com/oauth/callback

# ============================================================================
# FEATURE FLAGS (all features enabled by default)
# ============================================================================

ENABLE_BATCH_OPERATIONS=true
ENABLE_ROLLBACK_FUNCTIONALITY=true
ENABLE_CONTENT_INTELLIGENCE=true

# ============================================================================
# CORS CONFIGURATION (pre-configured for Webflow extension)
# ============================================================================

ALLOWED_ORIGINS=https://webflow.com,https://*.webflow-ext.com,https://*.webflow.io,http://localhost:5173,http://localhost:1337

# ============================================================================
# DEBUGGING (optional)
# ============================================================================

DEBUG=true
LOG_LEVEL=info
